<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<DialogPane expanded="true" prefHeight="224.0" prefWidth="305.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trung.RemovalWarningBox">
   <header>
      <AnchorPane prefHeight="34.0" prefWidth="260.0">
         <children>
            <Label fx:id="warningLabel" layoutX="116.0" layoutY="3.0" prefHeight="34.0" prefWidth="74.0" text="Warning">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </header>
   <content>
      <AnchorPane prefHeight="190.0" prefWidth="320.0">
         <children>
            <Label fx:id="questionLabel" layoutX="21.0" layoutY="39.0" prefHeight="38.0" prefWidth="264.0" text="Bạn có muốn xóa từ này không?">
               <font>
                  <Font name="Calibri" size="20.0" />
               </font>
            </Label>
            <Button fx:id="acceptButton" defaultButton="true" layoutX="59.0" layoutY="117.0" mnemonicParsing="false" onAction="#processAcceptButton" prefHeight="36.0" prefWidth="73.0" text="Có">
               <font>
                  <Font size="15.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="cancelButton" defaultButton="true" layoutX="175.0" layoutY="117.0" mnemonicParsing="false" onAction="#closeStage" prefHeight="36.0" prefWidth="69.0" text="Không">
               <font>
                  <Font size="15.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="closeButton" disable="true" layoutX="115.0" layoutY="126.0" mnemonicParsing="false" onAction="#closeStage" prefHeight="32.0" prefWidth="76.0" text="Đóng" visible="false">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Label fx:id="notification" alignment="CENTER" layoutX="63.0" layoutY="77.0" prefHeight="31.0" prefWidth="180.0" text="Xóa thành công!" textFill="#41b59e" visible="false">
               <font>
                  <Font name="Arial Bold" size="20.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </content>
</DialogPane>
